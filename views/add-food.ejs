<script src="js/add-food.js"></script>
<div class="row add">
	<form id="add_dish" action="/add_dish" name="add_dish" method="post" role="form">
		<div class="row add-title">
			Add Dish
		</div>
		<div class="well">
			<div class="form-group">
				<label for="restaurant">Restaurant Name:</label>
				<input type="text" id="restaurant" name="restaurant" class="form-control" disabled placeholder="<%= r.Restaurant %>">
			</div>
			<div class="form-group">
				<label for="item-name">Item Name:</label>
				<input type="text" id="item-name" name="item-name" placeholder="Item Name..." class="form-control" required>
			</div>
			<div class="form-group">
				<label for="item-name">Price:</label>
				<input type="text" id="price" name="price" placeholder="Price of the Item..." class="form-control" required>
			</div>
			<div class="form-group">
				<label for="description">Description:</label>
				<textarea id="description" name="description" rows="10" placeholder="Description of Dish..." class="form-control" required></textarea>
			</div>
			<div class="form-group">
				<label for="pics">Import Picture</label>
				<input type="file" id="pics">
				<p class="help-block">Insert Text Here</p>
			</div>
			<button type="submit" class="btn btn-default">Submit and Add Another Dish</button>
			<input type="hidden" id="id" name="id" value="<%=r._id%>">
		</div>
	</form>
</div>
<div class="row">
	<a href="/admin">
		<button type="button" class="btn btn-default btn-back" id="done">Done</button>
	</a>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">UNSAVED CHANGES</h4>
      </div>
      <div class="modal-body">
        You have Unsaved Information, proceed wisely Christian...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" id="close">Close</button>
        <button type="button" class="btn btn-primary" id="save">Save changes</button>
      </div>
    </div>
  </div>
</div>
